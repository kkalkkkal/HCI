<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolInfoActivity">





    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:orientation="horizontal" >


                <Button
                    android:id="@+id/btn1"
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:background="@drawable/round_btn2"
                    android:text="어린이집" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:background="@drawable/round_btn4"
                    android:text="유치원" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Barrier
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:barrierDirection="top" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="---------------------------------------------------------------------------------------------------------" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="모두의 유치원" />



                <ImageButton
                    android:id="@+id/compare_add"
                    android:background="#ffffff"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@android:drawable/ic_input_add" />

                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/compare_delete"
                    android:layout_gravity="right"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_delete" />



                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/like_added"
                    android:layout_gravity="right"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@android:drawable/star_big_on" />

                <ImageButton
                    android:visibility="visible"
                    android:background="#ffffff"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:id="@+id/like_added_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@android:drawable/btn_star_big_off" />


            </LinearLayout>


            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView2"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="경기도 화성시 화평군 에메랄드로 47" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:text="운영시간:" />

            <TextView
                android:id="@+id/opentime"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000~0000" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="홈페이지:" />

                <TextView
                    android:id="@+id/homepage"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.naver.com" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="전화번호:" />

                <TextView
                    android:id="@+id/callnumber"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123-4567-8910" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="통학버스 여부:" />

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/imageFilterView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/ic_baseline_directions_bus_24" />

                <TextView
                    android:id="@+id/bus_number"
                    android:textSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="0" />
                <TextView

                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />



            </LinearLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학급수와 담당 교사수" />


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_marginRight="20dp" />




            <TextView
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학급수와 유아수" />
            <TableLayout
                android:stretchColumns="*"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:id="@+id/tablelayout"
                android:layout_marginTop="10dp"

                android:background="#999999"
                >

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#999999">

                    <TextView
                        android:id="@+id/checkA_dateTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="학급"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/checkA_nameTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="유아수"
                        android:textSize="18sp" />
                </TableRow>


                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#999999">

                    <TextView
                        android:id="@+id/hak_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/ua_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18dp" />
                </TableRow>



            </TableLayout>


            <TextView
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유아수와 교사수" />
            <TableLayout
                android:stretchColumns="*"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:id="@+id/tablelayout2"
                android:layout_marginTop="10dp"


                >

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#999999">

                    <TextView
                        android:id="@+id/checkA_dateTitleText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="유아수"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/checkA_nameTitleText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="교사수"
                        android:textSize="18sp" />
                </TableRow>


                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#999999">

                    <TextView
                        android:id="@+id/hak_count2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginHorizontal="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:text="0"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/gyo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginHorizontal="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:text="0"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>


            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:text="급식운영" />

                    <TextView
                        android:id="@+id/unyoung"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="직영" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:text="영양교사배치" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/imageFilterView2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@drawable/ic_baseline_person_24" />



                        <TextView
                        android:id="@+id/youngyang"
                        android:textSize="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="0" />

                    <TextView

                        android:textSize="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="명" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:text="CCTV 설치대수" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/imageFilterView3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/ic_baseline_camera_alt_24" />


                <TextView
                    android:id="@+id/cctv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:textSize="40dp" />

                <TextView

                    android:textSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대" />
            </LinearLayout>




            <TextView
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시설점검여부" />
            <TableLayout
                android:layout_marginBottom="50dp"
                android:stretchColumns="*"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:id="@+id/tablelayout3"
                android:layout_marginTop="10dp"

                >

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#999999"
                    >

                    <TextView
                        android:id="@+id/checkA_dateTitleText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="분류"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/checkA_nameTitleText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="점검여부"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/checkA_namedateText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="최근일시"
                        android:textSize="18sp" />

                </TableRow>

            </TableLayout>



        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>